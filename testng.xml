<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite" parallel="tests" thread-count="4">
    <test name="Health API tests on FS1" >
        <parameter name="productId" value="FT_38083" />
        <classes>
            <class name="validators.health.ValidatorSPO2"/>
            <class name="validators.health.ValidatorBloodPressure"/>
            <class name="validators.health.ValidatorHeartRate"/>
            <class name="validators.health.ValidatorHRVariability"/>
            <class name="validators.health.ValidatorSleep"/>
            <class name="validators.health.ValidatorSteps"/>
            <class name="validators.health.ValidatorStress"/>
            <class name="validators.health.ValidatorTemperature"/>
            <class name="validators.health.ValidatorWomenHealth">
                <methods>
                    <include name="ValidatePutPeriodLogs"/>
                </methods>
            </class>
            <class name="validators.users.ValidatorUser"/>
            <class name="validators.ValidatorWeather"/>
            <class name="validators.users.ValidatorUserProfilePicture">
                <methods>
                    <include name="ValidateSameImageId"/>
                </methods>
            </class>
            <class name="validators.ValidatorLeaderboard"/>
            <class name="validators.ValidatorLeaderboard"/>
            <class name="validators.ValidatorGamification"/>
            <class name="validators.ValidatorReflexGames"/>
        </classes>
    </test>
</suite>
